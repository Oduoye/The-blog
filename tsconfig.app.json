{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Enabled stricter checks */
    "strict": true, // New: Enable strict mode
    "noUnusedLocals": true, // New: Warn about unused local variables
    "noUnusedParameters": true, // New: Warn about unused parameters
    "noImplicitAny": true, // New: Disallow implicit 'any' types
    "noFallthroughCasesInSwitch": true, // New: Warn about fallthrough cases in switch statements

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
