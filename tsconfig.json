{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": true,           // New: Disallow implicit 'any' types
    "noUnusedParameters": true,      // New: Warn about unused parameters
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true,          // New: Warn about unused local variables
    "strictNullChecks": true,        // New: Enforce null and undefined checks
    "strict": true                   // New: Enable all strict type-checking options for project consistency
  }
}
